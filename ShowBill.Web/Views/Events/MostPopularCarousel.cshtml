@model IList<ShowBill.Web.Models.EventModels.EventListItemViewModel>

<div id="mainEvents" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
    @if(Model.Count() > 1)
        {
            @for (int i = 0; i < Model.Count(); i++)
            {
                @if (i == 0)
                {
                    <li data-target="#mainEvents" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#mainEvents" data-slide-to="@i"></li>
                }
            }
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @for (int j = 0; j < Model.Count(); j++)
        {
            @if (j == 0)
            {
                <div class="item active">
                    <img src="@Model[j].Photo"/>
                    <div class="carousel-caption" role="option">
                        <p>
                            @Model[j].Title
                            <a class="btn btn-default" asp-controller="Events" asp-action="Details" asp-route-id=@Model[j].Id>
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <img src="@Model[j].Photo"/>
                    <div class="carousel-caption" role="option">
                        <p>
                            @Model[j].Title
                            <a class="btn btn-default" asp-controller="Events" asp-action="Details" asp-route-id=@Model[j].Id>
                                Details
                            </a>
                        </p>
                    </div>
                </div>
            }
        }
    </div>
    @if (Model.Count() > 1)
    {
        <a class="left carousel-control" href="#mainEvents" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#mainEvents" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
</div>