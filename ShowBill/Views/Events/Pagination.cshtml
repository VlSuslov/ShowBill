@using ShowBill.Web.Models;
@model ShowBill.Web.Models.Pagination
@{
    Filter filter = (Filter)ViewData["Filter"];
}
<div class="pagination-panel">
    @if (Model.EndPage > 0)
    {
        <ul class="pagination">
            @if (Model.CurrentPage > 0)
            {
                <li>
                    <a asp-controller="Events" asp-action="EventList" asp-route-filter=@filter  asp-route-page=0>First</a>
                </li>
                <li>
                    <a asp-controller="Events" asp-action="EventList" asp-route-filter=@filter asp-route-page=@(Model.CurrentPage-1)>Previous</a>
                </li>
            }

            @for (var page = Model.StartPage; page < Model.EndPage; page++)
            {
                <li class="@(page == Model.CurrentPage ? " active" : "" )">
                    <a asp-controller="Events" asp-action="EventList" asp-route-filter=@filter asp-route-page=@(page)>@(page)</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages-1)
            {
                <li>
                    <a asp-controller="Events" asp-action="EventList"
                       asp-route-filter=@filter
                       asp-route-page=@(Model.CurrentPage + 1)>Next</a>
                </li>
                <li>
                    <a asp-controller="Events" asp-action="EventList"
                       asp-route-filter=@filter
                       asp-route-page=@(Model.TotalPages-1)>Last</a>
                </li>
            }
        </ul>
    }
</div>
